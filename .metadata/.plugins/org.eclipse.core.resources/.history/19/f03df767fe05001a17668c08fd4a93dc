package prexercise01_NeverLearnedJavaBefore;

public class ProInBook5_6ConBreInf {

	public static void main(String[] args) {
		//5-6-1
		/** int num 	= 0;
		 * int count 	=0;
		 * while(num++<100) {
		 * 		if (num%5 != 0 || nu%7 != 0) {
		 * 			continue;
		 * 		count++
		 * 		System.out.println(num);
		 * 		}
		 * System.out.println("count : " + count);
		 *  
		 */
		int count = 0;
		
		for(int num = 0; num++ < 100;) {
			if(num % 5 != 0 || num % 7 != 0) {
				continue;
				
			}
			count++;
			System.out.println(num);
		}
		System.out.println("count : " + count);
		
		// 1부터 시작해서 모든 홀수와 3의 배수인 짝수를 더한다.
		// 몇을 더 했을 때 1000을 넘어서는가?
		// while문의 무한루프
		int i = 1;
		int sum = 0;
		
		while (true) {
			if (i % 2 != 0 || i % 3 == 0) {
				sum += i;
				
			}
			if (sum > 1000) {
				System.out.println(i);
				System.out.println("초과된 값 : " + sum);
				break;
			}
			i++;
		}
		
		
//		int sum = 0, num = 1;
