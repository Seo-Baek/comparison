package prexercise01;

public class ii {
	public static void main(String[] args) {
		
		int sum = 0, num = 1;
		
		while (true) {
			
			if (num % 2 != 0) {
				sum += num;
				
			} else {
				if (num % 3 == 0) {
					sum += num;
					
				}
				
			}
			
			if(sum > 1000) {
				System.out.println(num);
				System.out.println("초과된 값" + sum);
				break;
				
			}
			num++
		}
		
		
		
	}
}
