package prexercise01;

public class WhileDoWhile5_4 {
	
	public static void main(String[] args) {
		// 1부터 99까지의 합을 구하는 프로그램
		int num = 0;
		int sum = 0;
//		
//		while (num < 100) {
//			sum += num;
//			num++;
//			
//		}
		
		while (num < 100) {
			sum = sum + num;
			num++;
		}
		
		System.out.println(sum);
		
		
		// 1부터 100까지 출력하고 거꾸로 100에서부터 1까지 출력
		// while 문과 do while 문을 각각 한번씩 사용
		
		int i = 1;
		while(i <= 100) {
			System.out.println(i++);
			
		}
		
		do {
			System.out.println(--i);
			
		} while (i > 1);		// --i 로 sysout 전에 이미 i-1이 되어잇는 상태 
		
		
		// 1000 이하의 자연수 중에서
		// 2의 배수이면서 7의 배수인 숫자
		// 그 숫자들의 합을 구하는 프로그램
		
		int a = 0;
		int b = 0;
		
		while (a <= 1000) {
			if (a % 2 == 0 && a % 7 == 0) {
				System.out.println(a);
				b += a;
			}
			System.out.println(b);
			a++;
			
		}
		
		
		
	}//main
	
}//class
