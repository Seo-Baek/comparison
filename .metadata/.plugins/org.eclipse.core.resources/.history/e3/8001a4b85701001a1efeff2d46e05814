package chapter01;

public class SumInput {

	public static void main(String[] args) {
		int number = 10;
		int sum = 0;
		
		int temp = 0;
		
		//?
		
		
		while(sum <= number) {
			temp = temp + (sum + number);
			
			
			System.out.println(number + "까지 합은" + temp + "입니다.");
			sum = sum + 1;
			
		}
		
		
		
		

	}

}


//x + (x+1) + ....... (x+10)