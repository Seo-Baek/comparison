package chapter01;

public class CarTest {

	public static void main(String[] args) {
	
		Bus bus = new Bus();
		bus.run();
		
		// 자식 객체는 부모 타입으로 참조할 수 있다.
		// 객체지향 확장을 이해하기 위해서는 이것이 자연스러워야 한다. ㅡ> 상속 관계에서는 이렇게 써야한다!
		Car c = new Bus();
		c.run();
		
		// 오류
		// Bus b = new Car();
		// 작은 것이 큰 것이 될 수 없으니까.

		Bus bus2 = new Bus();
		bus2.run();
		bus2.info();
		
		Car c2 = new Bus();
		c2.run();
		c2.info();
		
		
		
	}//main

}//class
