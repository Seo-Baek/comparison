package chapter01;

import java.util.Scanner;

public class PrimeDetect2 {
	
	/*public static void isPrime(int x) {
		
		
	}*/

	public static void main(String[] args) {
		
		// 15가 소수인지 판별
		// 소수 => 1과 자신으로만 나뉘는 숫자
		// 2부터  (자기자신 -1)  15에 나누어본다. 나머지가 0인게 존재하면 소수가 아님! 
		
		
		
		int j	= 1;
		
		while(j <= 1000) {
			int num = j;
				
			boolean isPrime = true;
			int i	= 2;
				
			while(i < num) {
				int result = num % i;
						
				if(result == 0) {
					isPrime = false;
					break;
			}
			i++;

		} 
			
			
			
			
		}	
		
		// 판별
		if (isPrime) {
			System.out.println(j + "은 소수입니다.");
			
		} 

		//{(x-1)!^2}/x
		
		
		
		
		/**
		 * while (i < num) { if (num % i == 0) { //소수아니면 System.out.println(num +
		 * "은 소수가 아닙니다."); return;
		 * 
		 * }
		 * 
		 * i++; }
		 * 
		 * System.out.println(num + "은 소수입니다.");
		 */		
		//{(x-1)!^2}/x
				
				
	}//main
}//class

			


